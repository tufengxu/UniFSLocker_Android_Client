<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ufs">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="UniFSLocker"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".AddFileActivity"></activity>

        <activity android:name=".LoginActivity" />

        <activity android:name=".LinearRecyclerViewActivity" />

        <activity
            android:name=".MainActivity"
            android:label="UniFSLocker"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ShowFiles" />

        <activity
            android:name=".AllUsers"
            android:label="All Users" />

        <activity
            android:name=".NewUser"
            android:label="New User" />

    </application>

</manifest>